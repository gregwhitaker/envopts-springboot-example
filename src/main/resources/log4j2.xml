<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="[log4j2.xml] %m MDC%X%n"/>
        </Appender>
    </Appenders>

    <Loggers>
        <Logger name="envopts.example" level="debug" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>


        <Root level="error">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>

</Configuration>